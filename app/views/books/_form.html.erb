
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :genre_id, collection: ["fantasy", "fiction", "autobiography", "horror"] %>
    <%= f.input :condition, collection: ["good condition", "tattered", "average"] %>
    <%= f.file_field :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
